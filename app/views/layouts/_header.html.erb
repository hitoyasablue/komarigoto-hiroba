<header class="navbar fixed-top text-white">
  <div class="container">
    <div class="navbar-brand">
      <%= link_to root_path do %>
      困りごとひろば<i class="fa fa-paw fa-fw"></i>
      <% end %>
    </div>
    <div class="pc-nav">
    <% if logged_in? %>
    <ul class="loggedin-header">
      <li class="header-post"><%= link_to '困りごとを投稿', new_post_path %></li>
      <li class="header-posts"><%= link_to 'みんなの困りごと', posts_path %></li>
      <li class="header-myposts"><%= link_to '自分の困りごと', current_user %></li>
      <li class="header-notification">
        <%= link_to(notifications_path) do %>
          <% if unchecked_notifications.any? %>
            <i class="fa fa-circle" style="color: gold;"></i>
            通知
          <% else %>
            通知
          <% end %>
        <% end %>
      </li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
          アカウント <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'プロフィール編集', edit_user_path(current_user) %></li>
          <li class="divider"></li>
          <li>
            <%= link_to 'ログアウト', logout_path, method: :delete %>
          </li>
        </ul>
      </li>
    </ul>
    <nav class="sp-nav">
      <ul>
        <li class="header-post"><%= link_to '困りごとを投稿', new_post_path %></li>
        <li class="header-posts"><%= link_to 'みんなの困りごと', posts_path %></li>
        <li class="header-myposts"><%= link_to '自分の困りごと', current_user %></li>
        <li class="header-notification">
          <%= link_to(notifications_path) do %>
            <% if unchecked_notifications.any? %>
              <i class="fa fa-circle" style="color: gold;"></i>
              通知
            <% else %>
              通知
            <% end %>
          <% end %>
        </li>
        <li><%= link_to 'プロフィール編集', edit_user_path(current_user) %></li>
        <li>
          <%= link_to 'ログアウト', logout_path, method: :delete %>
        </li>
        <li class="close"><span>閉じる</span></li>
      </ul>
    </nav>
    <div id="hamburger">
      <span></span>
    </div>
    <% else %>
    <ul class="unloggedin-header">
      <li class="header-signup"><%= link_to 'ユーザー登録', signup_path %></li>
      <li class="header-login"><%= link_to 'ログイン', login_path %></li>
    </ul>
    <nav class="sp-nav">
      <ul>
        <li class="header-signup"><%= link_to 'ユーザー登録', signup_path %></li>
        <li class="header-login"><%= link_to 'ログイン', login_path %></li>
        <li class="close"><span>閉じる</span></li>
      </ul>
    </nav>
    <div id="hamburger">
      <span></span>
    </div>
    <% end %>
    </div>
  </div>
</header>

<script>
$(function() {
   const hum = $('#hamburger, .close')
   const nav = $('.sp-nav')
   hum.on('click', function(){
      nav.toggleClass('toggle');
   });
});
</script>