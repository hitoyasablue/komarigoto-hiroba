<% if logged_in? %>
  <div id="like_button_<%= post.id %>">
    <% if post.liked?(current_user) %>
      <div class="like">
        <div class="row">
          <div class="col-md-4 offset-md-4">
            <%= button_to 'えらい済', post_like_path(id: post.id, post_id: post.id), class: 'btn btn-outline-info', id: 'unlike-button', method: :delete, remote: true %>
            <%= post.likes.count %>
          </div>
        </div>
      </div>
    <% else %>
      <div class="unlike">
        <div class="row">
          <div class="col-md-4 offset-md-4">
            <%= button_to 'えらい', post_likes_path(id: post.id, post_id: post.id), class: 'btn btn-outline-info', id: 'like-button', method: :post, remote: true %>
            <%= post.likes.count %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
