<h3 class="login-heading">ログイン</h3>

<div class="container">
<div class="row">
  <div class="col-md-6 offset-md-3">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
      <%= f.label :メールアドレス, 'メールアドレス'%>
      <%= f.email_field :email, class: 'form-control', id: 'login_email' %>
      <%= f.label :パスワード, 'パスワード' %>
      <%= f.password_field :password, class: 'form-control', id: 'login_password' %>
      <%= f.submit "ログイン", class: 'btn btn-primary' %>
    <% end %>
    <p>ユーザー登録をされていない方は<%= link_to 'こちら', signup_path %></p>
    <%= render 'test_login' %>
  </div>
</div>
</div>